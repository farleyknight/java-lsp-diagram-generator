{
  "name": "java-lsp-diagram-generator",
  "version": "0.1.0",
  "description": "Node.js TypeScript application with a Web UI (Express & Vue) to generate Mermaid sequence diagrams from Java REST endpoints using Java LSP and java-ast, with LLM (Claude) for disambiguation and mermaid diagram generation.",
  "main": "dist/server/index.js",
  "private": true,
  "license": "MIT",
  "author": "",
  "repository": "",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "npm run build:server && npm run build:client",
    "lint": "eslint . --ext .ts,.js,.vue",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "server:start": "node dist/server/index.js",
    "server:dev": "nodemon src/server/index.ts",
    "server:build": "tsc -p tsconfig.server.json",
    "lsp:install": "bash scripts/install-lsp.sh",
    "lsp:start": "ts-node --compiler-options '{\"module\":\"CommonJS\"}' src/scripts/launch-lsp.ts tests/fixtures/SampleJavaProject",
    "lsp:stop": "ts-node --compiler-options '{\"module\":\"CommonJS\"}' src/scripts/stop-lsp.ts",
    "client:serve": "vue-cli-service serve",
    "client:build": "vue-cli-service build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test",
    "test:e2e:open": "playwright test --ui"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.41.0",
    "axios": "^1.9.0",
    "express": "^5.1.0",
    "mermaid": "^11.6.0",
    "pinia": "^3.0.2",
    "vue": "^3.5.13",
    "vue-router": "^4.5.1",
    "vscode-languageserver-protocol": "^3.17.5",
    "vscode-languageserver": "^9.0.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.17",
    "@typescript-eslint/eslint-plugin": "^8.32.0",
    "@typescript-eslint/parser": "^8.32.0",
    "@vue/cli-plugin-babel": "^5.0.8",
    "@vue/cli-plugin-eslint": "^3.8.0",
    "@vue/cli-plugin-router": "^5.0.8",
    "@vue/cli-plugin-typescript": "^5.0.8",
    "@vue/cli-service": "^3.3.1",
    "eslint": "^8.0.0",
    "eslint-plugin-vue": "^7.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.5.3",
    "supertest": "^7.1.0",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vue-eslint-parser": "^10.1.3"
  }
} 